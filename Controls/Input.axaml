<ResourceDictionary xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Flux">

  <Design.PreviewWith>
    <StackPanel Width="550" Spacing="10">      
        <StackPanel Background="{DynamicResource SystemRegionBrush}">
          <controls:Input />
          <controls:Input />
          <controls:Input />
        </StackPanel>
    </StackPanel>
  </Design.PreviewWith>
 
  <ControlTheme x:Key="{x:Type controls:Input}" TargetType="controls:Input">
    <Setter Property="Template">
      <ControlTemplate>
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
          </Grid.ColumnDefinitions>
          <TextBlock Grid.Column="0" Text="{TemplateBinding InputLabel}" VerticalAlignment="Center" />
          <TextBox Grid.Column="1" x:Name="PART_Textbox"  Text="{Binding Value, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"/>
        </Grid>

      </ControlTemplate>
    </Setter>
  </ControlTheme>
</ResourceDictionary>
