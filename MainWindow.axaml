<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        xmlns:vm="clr-namespace:Flux.ViewModels"
        xmlns:val="clr-namespace:Flux.ViewModels.Values"
        x:Class="Flux.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Flux">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Menu Grid.Row="0">
      <MenuItem Header="_File">
        <MenuItem Header="_Open" Click="MenuItem_OpenFile_Click"/>
      </MenuItem>
    </Menu>
    <TreeView Grid.Row="1" ItemsSource="{Binding CurrentStreamFile.Items}">
      <TreeView.DataTemplates>
        <TreeDataTemplate DataType="val:ClassListViewModel"
                  ItemsSource="{Binding Instances}">
          <TextBlock Text="{Binding Name}" />
        </TreeDataTemplate>

        <!-- Class -->
        <TreeDataTemplate DataType="val:ClassViewModel">
          <TextBlock Text="{Binding Name}" />
        </TreeDataTemplate>
      </TreeView.DataTemplates>
    </TreeView>
  </Grid>
</Window>
