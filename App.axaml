<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Flux.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
    <Application.Resources>
      <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
          <ResourceInclude Source="/Controls/Input.axaml"/>
          <ResourceInclude Source="/Controls/Vec3Input.axaml"/>
          <ResourceInclude Source="/Controls/Vec4Input.axaml"/>
          <ResourceInclude Source="/Controls/MtxInput.axaml"/>
          <ResourceInclude Source="/Controls/FSInput.axaml"/>
          <ResourceInclude Source="/Controls/ColourInput.axaml"/>
        </ResourceDictionary.MergedDictionaries>
      </ResourceDictionary>
    </Application.Resources>
</Application>